{
  "name": "@splytech-io/mongodb-dynamic-indexes",
  "version": "0.0.1",
  "description": "MongoDB Dynamic Indexes",
  "main": "index",
  "typings": "index.d",
  "scripts": {
    "test": "nyc mocha --require ts-node/register --exit '*.spec.ts'",
    "lint": "tslint --project .",
    "lint:fix": "tslint --project . --fix",
    "build": "tsc",
    "prepush": "npm run lint",
    "prepublish": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "mongodb",
    "dynamic",
    "index"
  ],
  "author": "Andrius Skerla",
  "license": "ISC",
  "dependencies": {
    "@types/debug": "0.0.30",
    "@types/mongodb": "^3.0.12",
    "debug": "^3.1.0"
  },
  "nodemonConfig": {
    "restartable": "rs",
    "ignore": [
      ".git",
      "node_modules/**/node_modules"
    ],
    "verbose": true,
    "execMap": {
      "ts": "node_modules/.bin/ts-node"
    },
    "watch": [
      "src/**/*.ts"
    ],
    "ext": "ts"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "text-summary"
    ],
    "include": [
      "*.ts"
    ],
    "exclude": [
      "*.spec.ts"
    ]
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/mocha": "^5.0.0",
    "@types/sinon": "^4.3.1",
    "chai": "^4.1.2",
    "husky": "^0.14.3",
    "mocha": "^5.0.5",
    "nyc": "^11.6.0",
    "sinon": "^4.5.0",
    "ts-node": "^5.0.1",
    "tslint": "^5.9.1",
    "tslint-eslint-rules": "^5.1.0",
    "typescript": "^2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/splytech-io/node-mongodb-dynamic-indexes.git"
  },
  "bugs": {
    "url": "https://github.com/splytech-io/node-mongodb-dynamic-indexes/issues"
  },
  "homepage": "https://github.com/splytech-io/node-mongodb-dynamic-indexes#readme"
}
